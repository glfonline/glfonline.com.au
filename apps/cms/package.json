{
	"name": "@glfonline/cms",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "sanity build",
		"check:deps": "pnpm --dir ../.. exec knip --workspace apps/cms --no-exit-code --dependencies",
		"check:exports": "pnpm --dir ../.. exec knip --workspace apps/cms --no-exit-code --exports",
		"check:format": "pnpm biome format",
		"check:lint": "pnpm biome lint",
		"check:types": "tsc --noEmit",
		"clean": "pnpm clean:outputs && rm -rf node_modules",
		"clean:outputs": "rm -rf .sanity && rm -rf .turbo && rm -rf dist",
		"deploy": "pnpm run /^deploy:/",
		"deploy:graphql": "sanity graphql deploy",
		"deploy:studio": "sanity deploy",
		"dev": "sanity dev",
		"fix:deps": "pnpm --dir ../.. exec knip --workspace apps/cms --fix --fix-type dependencies --no-exit-code",
		"fix:exports": "pnpm --dir ../.. exec knip --workspace apps/cms --fix --fix-type exports --no-exit-code",
		"fix:format": "pnpm biome format --write",
		"fix:lint": "pnpm biome lint --write",
		"start": "sanity start"
	},
	"dependencies": {
		"@sanity/vision": "^5.2.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"sanity": "^5.2.0",
		"styled-components": "^6.2.0"
	},
	"devDependencies": {
		"@glfonline/tsconfig": "workspace:^",
		"knip": "^5.80.1",
		"typescript": "^5.9.3"
	}
}
