{
	"name": "@glfonline/sanity-client",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "pnpm run build:tsdown",
		"build:tsdown": "tsdown",
		"check:deps": "pnpm --dir ../.. exec knip --workspace packages/sanity-client --no-exit-code --dependencies",
		"check:exports": "pnpm --dir ../.. exec knip --workspace packages/sanity-client --no-exit-code --exports",
		"check:format": "biome format",
		"check:lint": "biome lint",
		"check:types": "tsc --noEmit",
		"clean": "pnpm run clean:outputs && rm -rf node_modules",
		"clean:outputs": "rm -rf .turbo dist .eslintcache",
		"dev": "pnpm run dev:tsdown",
		"dev:tsdown": "tsdown --watch src",
		"fix:deps": "pnpm --dir ../.. exec knip --workspace packages/sanity-client --fix --fix-type dependencies --no-exit-code",
		"fix:exports": "pnpm --dir ../.. exec knip --workspace packages/sanity-client --fix --fix-type exports --no-exit-code",
		"fix:format": "biome format --write",
		"fix:lint": "biome lint --write",
		"generate": "graphql-codegen --config codegen.json && pnpm exec gql-tada generate output --tsconfig ./tsconfig.json && node -e \"const fs=require('node:fs');const p='src/graphql-env.d.ts';let s=fs.readFileSync(p,'utf8');s=s.replace(/^\\/\\* eslint-disable \\*\\/\\n?/,'').replace(/^\\/\\* prettier-ignore \\*\\/\\n?/,'');fs.writeFileSync(p,s);\" && pnpm run fix:format"
	},
	"dependencies": {
		"gql.tada": "^1.9.0",
		"graphql": "^16.12.0"
	},
	"devDependencies": {
		"@glfonline/tsconfig": "workspace:^",
		"@graphql-codegen/cli": "^6.1.1",
		"@graphql-codegen/schema-ast": "^5.0.0",
		"knip": "^5.82.1",
		"tsdown": "^0.20.0",
		"typescript": "^5.9.3"
	}
}
