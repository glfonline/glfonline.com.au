{
	"name": "@glfonline/sanity-client",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "pnpm run build:ts-gql && pnpm run build:tsup",
		"build:ts-gql": "ts-gql build",
		"build:tsup": "tsup",
		"check:types": "tsc --noEmit",
		"clean": "pnpm clean:outputs && rm -rf node_modules",
		"clean:outputs": "rm -rf __generated__ && rm -rf .turbo && rm -rf dist",
		"dev": "concurrently -n \"ts-gql,tsup\" -c \"bgBlue.bold,bgMagenta.bold\" \"pnpm dev:ts-gql\" \"pnpm dev:tsup\"",
		"dev:ts-gql": "ts-gql watch",
		"dev:tsup": "tsup --watch",
		"generate": "graphql-codegen --config codegen.json",
		"postinstall": "ts-gql build",
		"lint": "TIMING=1 eslint \"src/**/*.{js,ts,jsx,tsx}\""
	},
	"dependencies": {
		"@ts-gql/compiler": "^0.16.7",
		"@ts-gql/fetch": "^0.1.3",
		"@ts-gql/tag": "^0.7.3"
	},
	"devDependencies": {
		"@glfonline/eslint-config": "workspace:^",
		"@glfonline/tsconfig": "workspace:^",
		"@graphql-codegen/cli": "^5.0.2",
		"@graphql-codegen/schema-ast": "^4.1.0",
		"concurrently": "^8.2.2",
		"graphql": "^16.9.0",
		"react": "^18.3.1",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4"
	},
	"ts-gql": {
		"addTypenames": false,
		"mode": "no-transform",
		"schema": "./schema.graphql"
	}
}
