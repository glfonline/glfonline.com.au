{
	"name": "@glfonline/sanity-client",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "pnpm run build:ts-gql && pnpm run build:tsup",
		"build:ts-gql": "ts-gql build",
		"build:tsup": "tsup",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
		"dev": "concurrently \"pnpm run dev:ts-gql\" \"pnpm run dev:tsup\"",
		"dev:ts-gql": "ts-gql watch",
		"dev:tsup": "tsup --watch",
		"generate": "graphql-codegen --config codegen.json",
		"postinstall": "ts-gql build",
		"lint": "TIMING=1 eslint \"src/**/*.{js,ts,jsx,tsx}\""
	},
	"dependencies": {
		"@ts-gql/compiler": "^0.16.3",
		"@ts-gql/fetch": "^0.1.2",
		"@ts-gql/tag": "^0.7.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.12",
		"@glfonline/eslint-config": "0.0.0",
		"@glfonline/tsconfig": "0.0.0",
		"@graphql-codegen/cli": "^2.16.4",
		"@graphql-codegen/schema-ast": "^2.6.0",
		"@types/node": "18.11.18",
		"concurrently": "^7.6.0",
		"cosmiconfig-toml-loader": "^1.0.0",
		"eslint": "^8.33.0",
		"graphql": "^16.6.0",
		"react": "^18.2.0",
		"ts-node": "^10.9.1",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4"
	},
	"ts-gql": {
		"addTypenames": false,
		"mode": "no-transform",
		"schema": "./schema.graphql"
	}
}
