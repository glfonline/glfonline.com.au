{
	"name": "@glfonline/sanity-client",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist/**"],
	"scripts": {
		"build": "pnpm run build:ts-gql && pnpm run build:tsup",
		"build:ts-gql": "ts-gql build",
		"build:tsup": "tsup",
		"check": "pnpm biome check && pnpm run check:types",
		"check:format": "pnpm biome format",
		"check:lint": "pnpm biome lint",
		"check:types": "tsc --noEmit",
		"clean": "pnpm clean:outputs && rm -rf node_modules",
		"clean:outputs": "rm -rf __generated__ && rm -rf .turbo && rm -rf dist",
		"dev": "concurrently -n \"ts-gql,tsup\" -c \"bgBlue.bold,bgMagenta.bold\" \"pnpm dev:ts-gql\" \"pnpm dev:tsup\"",
		"dev:ts-gql": "ts-gql watch",
		"dev:tsup": "tsup --watch",
		"fix": "pnpm biome check --write",
		"fix:format": "pnpm biome format --write",
		"fix:lint": "pnpm biome lint --write",
		"generate": "graphql-codegen --config codegen.json",
		"postinstall": "ts-gql build"
	},
	"dependencies": {
		"@ts-gql/compiler": "^0.16.7",
		"@ts-gql/fetch": "^0.1.3",
		"@ts-gql/tag": "^0.7.3"
	},
	"devDependencies": {
		"@glfonline/tsconfig": "workspace:^",
		"@graphql-codegen/cli": "^5.0.2",
		"@graphql-codegen/schema-ast": "^4.1.0",
		"concurrently": "^9.0.0",
		"graphql": "^16.9.0",
		"react": "^18.3.1",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4"
	},
	"ts-gql": {
		"addTypenames": false,
		"mode": "no-transform",
		"schema": "./schema.graphql"
	}
}
