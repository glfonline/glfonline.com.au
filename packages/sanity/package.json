{
	"name": "@glfonline/sanity",
	"version": "0.0.0",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsup",
		"check:types": "tsc --noEmit",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
		"dev": "concurrently \"pnpm run dev:ts-gql\" \"pnpm run dev:tsup\"",
		"dev:ts-gql": "ts-gql watch",
		"dev:tsup": "tsup --watch",
		"generate": "DOTENV_CONFIG_PATH=./.env graphql-codegen -r dotenv/config --config sanity-codegen.json",
		"postinstall": "ts-gql build",
		"lint": "TIMING=1 eslint \"src/**/*.ts*\""
	},
	"dependencies": {
		"@ts-gql/compiler": "^0.16.1",
		"@ts-gql/fetch": "^0.1.2",
		"@ts-gql/tag": "^0.7.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.5",
		"@glfonline/eslint-config": "0.0.0",
		"@glfonline/tsconfig": "0.0.0",
		"@graphql-codegen/cli": "^2.16.1",
		"@graphql-codegen/schema-ast": "^2.6.0",
		"@types/node": "18.11.13",
		"concurrently": "^7.6.0",
		"dotenv-cli": "^6.0.0",
		"eslint": "^8.30.0",
		"graphql": "^16.6.0",
		"ts-node": "^10.9.1",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4"
	},
	"ts-gql": {
		"addTypenames": false,
		"mode": "no-transform",
		"schema": "./sanity-schema.graphql"
	}
}
