{
	"name": "glfonline",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "npm run build:css && build:remix",
		"build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/tailwind.css",
		"build:remix": "remix build",
		"check": "pnpm run check:format && pnpm run check:lint && pnpm run check:types",
		"check:format": "pnpm prettier . --cache --check",
		"check:lint": "TIMING=1 eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"check:types": "tsc -b",
		"dev": "concurrently \"pnpm run dev:css\" \"pnpm run dev:ts-gql\" \"pnpm run dev:remix\"",
		"dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/tailwind.css",
		"dev:remix": "remix dev",
		"dev:ts-gql": "ts-gql watch",
		"fix": "pnpm fix:format && pnpm fix:lint",
		"fix:format": "pnpm prettier . --cache --write",
		"fix:lint": "TIMING=1 eslint --cache --cache-location ./node_modules/.cache/eslint . --fix",
		"generate": "DOTENV_CONFIG_PATH=./.env graphql-codegen -r dotenv/config --config shopify-codegen.json",
		"preinstall": "npx only-allow pnpm",
		"postinstall": "ts-gql build"
	},
	"dependencies": {
		"@radix-ui/react-navigation-menu": "^1.1.1",
		"@remix-run/node": "^1.8.2",
		"@remix-run/react": "^1.8.2",
		"@remix-run/vercel": "^1.8.2",
		"@ts-gql/compiler": "^0.16.1",
		"@ts-gql/fetch": "^0.1.2",
		"@ts-gql/tag": "^0.7.0",
		"@vercel/node": "^2.8.0",
		"clsx": "^1.2.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@babel/core": "^7.20.5",
		"@graphql-codegen/cli": "^2.16.1",
		"@graphql-codegen/schema-ast": "^2.6.0",
		"@remix-run/dev": "^1.8.2",
		"@remix-run/eslint-config": "^1.8.2",
		"@remix-run/serve": "^1.8.2",
		"@ts-gql/eslint-plugin": "^0.8.4",
		"@types/node": "18.11.13",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"concurrently": "^7.6.0",
		"dotenv-cli": "^6.0.0",
		"eslint": "^8.29.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-simple-import-sort": "^8.0.0",
		"graphql": "^16.6.0",
		"postcss": "^8.4.19",
		"prettier": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"tailwindcss": "^3.2.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"packageManager": "pnpm@7.18.0",
	"engines": {
		"node": ">=18",
		"pnpm": ">=7.18.0"
	},
	"volta": {
		"node": "18.12.1"
	},
	"ts-gql": {
		"addTypenames": false,
		"mode": "no-transform",
		"schema": "./shopify-schema.graphql"
	}
}
