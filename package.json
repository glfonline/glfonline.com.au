{
	"name": "@glfonline/root",
	"private": true,
	"scripts": {
		"build": "stale-dep && turbo run build",
		"build:cms": "stale-dep && turbo run build --filter=@glfonline/cms...",
		"build:packages": "stale-dep && turbo run build --filter=./packages/*",
		"build:web": "stale-dep && turbo run build --filter=@glfonline/web...",
		"check": "stale-dep && pnpm run check:format && pnpm run check:lint && pnpm run check:types",
		"check:format": "pnpm prettier . --cache --check",
		"check:lint": "turbo run lint",
		"check:types": "turbo run check:types",
		"clean": "pnpm run -r clean && rm -rf node_modules",
		"clean:outputs": "pnpm run -r clean:outputs",
		"deploy:cms": "stale-dep && pnpm --filter @glfonline/cms run deploy && turbo run generate",
		"dev": "stale-dep && turbo run dev",
		"dev:cms": "stale-dep && turbo run dev --filter=@glfonline/cms...",
		"dev:web": "stale-dep && turbo run dev --filter=@glfonline/web...",
		"fix": "pnpm fix:format && pnpm fix:lint",
		"fix:format": "pnpm prettier . --cache --write",
		"fix:lint": "turbo run lint -- --fix",
		"fresh": "pnpm run clean && pnpm install",
		"generate": "stale-dep && turbo run generate",
		"preinstall": "npx only-allow pnpm",
		"postinstall": "manypkg check && stale-dep -u"
	},
	"dependencies": {
		"@glfonline/eslint-config": "0.0.0",
		"@manypkg/cli": "^0.20.0",
		"prettier": "^2.8.4",
		"prettier-plugin-tailwindcss": "^0.2.4",
		"stale-dep": "^0.6.0",
		"turbo": "^1.8.3"
	},
	"packageManager": "pnpm@7.27.1",
	"engines": {
		"node": ">=16.19.1",
		"pnpm": ">=7.27.1"
	},
	"manypkg": {
		"defaultBranch": "main"
	}
}
