{
	"name": "@glfonline/root",
	"private": true,
	"scripts": {
		"build": "stale-dep && turbo run build",
		"build:packages": "stale-dep && turbo run build --filter=./packages/*",
		"build:web": "stale-dep && turbo run build --filter=./packages/* --filter=@glfonline/web",
		"check": "stale-dep && pnpm run check:format && pnpm run check:lint && pnpm run check:types",
		"check:format": "pnpm prettier . --cache --check",
		"check:lint": "turbo run lint",
		"check:types": "turbo run check:types",
		"clean": "pnpm run -r \"clean\" && rm -rf node_modules",
		"dev": "stale-dep && turbo run dev --parallel",
		"dev:cms": "stale-dep && turbo run dev --filter=./packages/* --filter=@glfonline/cms",
		"dev:web": "stale-dep && turbo run dev --filter=./packages/* --filter=@glfonline/web",
		"fix": "pnpm fix:format && pnpm fix:lint",
		"fix:format": "pnpm prettier . --cache --write",
		"fix:lint": "turbo run lint -- --fix",
		"fresh": "pnpm run clean && pnpm install",
		"preinstall": "npx only-allow pnpm",
		"postinstall": "manypkg check && stale-dep -u && pnpm build:packages"
	},
	"dependencies": {
		"@glfonline/eslint-config": "0.0.0",
		"@manypkg/cli": "^0.19.2",
		"prettier": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"stale-dep": "^0.3.1",
		"turbo": "^1.6.3"
	},
	"packageManager": "pnpm@7.10.0",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=7.10.0"
	},
	"volta": {
		"node": "18.12.1"
	},
	"manypkg": {
		"defaultBranch": "main"
	}
}
