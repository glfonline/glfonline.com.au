{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "npm run build:css && build:remix",
		"build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/tailwind.css",
		"build:remix": "remix build",
		"check": "pnpm run check:format && pnpm run check:lint && pnpm run check:types",
		"check:format": "pnpm prettier . --cache --check",
		"check:lint": "TIMING=1 eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"check:types": "tsc -b",
		"dev": "concurrently \"pnpm run dev:css\" \"pnpm run dev:remix\"",
		"dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/tailwind.css",
		"dev:remix": "remix dev",
		"fix": "pnpm fix:format && pnpm fix:lint",
		"fix:format": "pnpm prettier . --cache --write",
		"fix:lint": "TIMING=1 eslint --cache --cache-location ./node_modules/.cache/eslint . --fix",
		"preinstall": "npx only-allow pnpm"
	},
	"dependencies": {
		"@remix-run/node": "^1.8.2",
		"@remix-run/react": "^1.8.2",
		"@remix-run/vercel": "^1.8.2",
		"@vercel/node": "^2.8.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.8.2",
		"@remix-run/eslint-config": "^1.8.2",
		"@remix-run/serve": "^1.8.2",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"concurrently": "^7.6.0",
		"eslint": "^8.29.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-simple-import-sort": "^8.0.0",
		"postcss": "^8.4.19",
		"prettier": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.4"
	},
	"engines": {
		"node": ">=14"
	}
}
