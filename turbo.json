{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"outputs": [".sanity/**", "api/**", "build/**", "dist/**", "public/build/**"],
			"dependsOn": ["^build", "^generate"]
		},
		"@glfonline/web#build": {
			"dependsOn": ["^build"],
			"env": ["AKISMET_API_KEY", "ENCRYPTION_KEY", "NODE_ENV", "SENDGRID_API_KEY", "TURNSTILE_SECRET_KEY"],
			"outputs": ["api/index.js", "api/build/**", "public/build/**"]
		},
		"check:types": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"generate": {
			"outputs": ["schema.graphql"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"test:e2e": {
			"dependsOn": ["^build"]
		}
	}
}
