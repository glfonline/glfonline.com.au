{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"check:format": {
			"dependsOn": ["^build"]
		},
		"check:lint": {
			"dependsOn": ["^build"]
		},
		"check:types": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"fix:format": {
			"dependsOn": ["^build"]
		},
		"fix:lint": {
			"dependsOn": ["^build"]
		},
		"test:e2e": {
			"dependsOn": ["^build"]
		}
	}
}
