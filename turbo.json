{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"outputs": [".sanity/**", "api/**", "build/**", "dist/**", "public/build/**"],
			"dependsOn": ["^build", "^generate"]
		},
		"check:types": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"generate": {
			"outputs": ["schema.graphql"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"test:e2e": {
			"dependsOn": ["^build"]
		}
	}
}
